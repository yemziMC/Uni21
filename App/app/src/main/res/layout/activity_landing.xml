<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:background="#ffffff">

        <ImageView
            android:layout_width="60dp"
            android:src="@drawable/icon">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:text="Uni"
            android:textColor="#464646"
            android:textSize="45sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="21"
            android:textColor="#5077c7"
            android:textSize="45sp"
            android:textStyle="bold">
        </TextView>
    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#6ccbc0">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Home"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-17dp"
        android:textColor="#5d99f8">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:layout_marginTop="30dp"
        >

        <GridLayout
            android:id="@+id/GridLayout1"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:rowCount="3">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginLeft="25dp"
                android:background="#ffffff"
                android:onClick="navigateTo"
                android:src="@drawable/test_yourself_button" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:layout_marginLeft="0dp"
                android:background="#ffffff"
                android:src="@drawable/versus_mode_button"
                android:text="@string/VersusMode" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:src="@drawable/review_questions_button"
                android:layout_marginLeft="25dp"
                android:background="#ffffff"/>

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:src="@drawable/progress_monitor_button"
                android:layout_marginLeft="0dp"
                android:background="#ffffff"/>

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:src="@drawable/go_premium_button"
                android:layout_marginLeft="25dp"
                android:background="#ffffff"/>

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="126dp"
                android:layout_height="126dp"
                android:src="@drawable/settings_button"
                android:layout_marginLeft="0dp"
                android:background="#ffffff"/>
        </GridLayout>

        </LinearLayout>

    </LinearLayout>


